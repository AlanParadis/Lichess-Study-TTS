{
  "manifest_version": 3,
  "name": "Lichess Study TTS",
  "version": "1.0",
  "description": "A Chrome extension to read Lichess study comments using Text-to-Speech. Great for step-by-step commented studies like LeninPerez ones : https://lichess.org/study/search?q=owner%3ALeninPerez",
  "options_page": "options.html",
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "images/icon16.png",
	  "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.lichess.org/study/*"],
      "exclude_matches": ["*://*.lichess.org/study/search*"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
	"32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
